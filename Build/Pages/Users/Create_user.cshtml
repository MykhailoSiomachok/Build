@page
@model Build.Pages.Users.Create_userModel
@{
    ViewData["Title"] = "Create_user";
}

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.First_name">Name</label>
            </div>
            <div class="col-6">
                <input asp-for="User.First_name" class="form-control" />
            </div>
            <span asp-validation-for="User.First_name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Last_name">Surname</label>
            </div>
            <div class="col-6">
                <input asp-for="User.Last_name" class="form-control" />
            </div>
            <span asp-validation-for="User.Last_name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Email"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Email" class="form-control" />
            </div>
            @if (Model.Email_occupied != null)
            {
                @Html.DisplayFor(m => Model.Email_occupied)
            }
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Password"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Password" class="form-control" />
            </div>
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Role"></label>
            </div>
            <div class="col-6">
                <input asp-for="User.Role" class="form-control" />
            </div>
            <span asp-validation-for="User.Role" class="text-danger"></span>
        </div>
        <div class="from-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Regist" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="/Index" class="btn btn-success form-control">Return</a>
            </div>
        </div>
    </form>
</div>