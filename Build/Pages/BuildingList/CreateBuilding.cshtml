@page
@model Build.Pages.BuildingList.CreateBuildingModel

<br />
<h2 class="text-info">Create New Building</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Building.Street"></label>
            </div>
            <div class="col-6">
                <input asp-for="Building.Street" class="form-control" />
            </div>
            <span asp-validation-for="Building.Street" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Building.Number"></label>
            </div>
            <div class="col-6">
                <input asp-for="Building.Number" class="form-control" />
            </div>
            <span asp-validation-for="Building.Number" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Building.Square"></label>
            </div>
            <div class="col-6">
                <input asp-for="Building.Square" class="form-control" />
            </div>
            <span asp-validation-for="Building.Square" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Building.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Building.Price" class="form-control" />
            </div>
            <span asp-validation-for="Building.Price" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Building.Year"></label>
            </div>
            <div class="col-6">
                <input asp-for="Building.Year" class="form-control" />
            </div>
            <span asp-validation-for="Building.Year" class="text-danger"></span>

        </div>
        <div class="from-group row">
            <div class="col-3 offset-3">
                <input type ="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="List" class="btn btn-success form-control">Return</a>
            </div>
        </div>
    </form>
</div>